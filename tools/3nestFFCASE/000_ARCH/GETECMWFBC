DATE=0
PREVI=00
reseau=00
if [ "$#" -ge 3 ]; then
  DATE=$1
  PREVI=$2
  reseau=$3
fi
echo "using date " $DATE " step " $PREVI " at ech " $reseau
gribfile=levels.${PREVI}
gribfilesfc=surface.${PREVI}
cat >req_level_${PREVI} <<EOF  
retrieve,
class=od,
area=59/-16/30/7,
date=$DATE,
expver=1,
grid=0.09/0.09,
,
levtype=ml,
param=130/131/132/133/152,
step=${PREVI},
stream=oper,
time=${reseau},
type=fc,
target="${gribfile}"
EOF

cat >req_sfc_${PREVI} <<EOF
retrieve,
class=od,
area=59/-16/30/7,
date=$DATE,
expver=1,
grid=0.09/0.09,
levtype=sfc,
param=34.128/39.128/40.128/41.128/42.128/129.128/134.128/139.128/142.128/151.128/165.128/166.128/167.128/170.128/172.128/183.128/228.128/235.128/236.128/32.128/33.128/44.128/45.128/141.128/144.128,
step=${PREVI},
stream=oper,
time=${reseau},
type=fc,
target="${gribfilesfc}"
EOF
